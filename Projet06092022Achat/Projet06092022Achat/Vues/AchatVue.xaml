<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet06092022Achat.Vues.AchatVue">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding UnAchat.Photo}" />
            <Label Text="Nom du produit"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="" Text="{Binding UnAchat.NomProduit}"/>
            <Label Text="Prix"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="" Text="{Binding UnAchat.Prix}"/>
            <Label Text="Quantite"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="" Text="{Binding UnAchat.Quantite}"/>
            <Button Text="Calcul" Clicked="Button_Clicked"/>

            <Label  Text="Montant"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="montant" Placeholder="" Text="{Binding Montant}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>